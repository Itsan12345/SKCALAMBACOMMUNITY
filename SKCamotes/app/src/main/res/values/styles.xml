<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#9510D3</item> <!-- Status bar color -->
        <item name="android:windowLightStatusBar">false</item> <!-- Use dark content if true -->
    </style>

    <!-- Custom Tab Text Appearance -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/leaguegothicregular</item>
        <item name="android:textColor">@color/black</item> <!-- Optional: Set text color -->
        <item name="android:textSize">20sp</item> <!-- Use 'sp' instead of 'dp' for text size -->
        <item name="android:textStyle">italic</item> <!-- Apply italic style -->
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>


    <style name="DotTabIndicator" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#000000</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
        <item name="tabTextColor">#B0A5A5</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabMinWidth">32dp</item> <!-- Adjust gap size -->
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
    </style>

</resources>