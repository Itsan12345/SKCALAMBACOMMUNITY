<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchoolSuppliesFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="718dp"
        android:background="@drawable/bg_schoolsupplies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!-- 2x2 CardView Section -->

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="192dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Please Choose below:"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="-50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/cardview_outline"
                        app:cardBackgroundColor="#EFF1F3"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:id="@+id/card_pencil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cardview_outline"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/img_pencil" />

                            <TextView
                                android:id="@+id/textViewPencil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/inter_extrabolditalic"
                                android:text="Pencil"
                                android:textColor="#000"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/cardview_outline"
                        app:cardBackgroundColor="#EFF1F3"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:id="@+id/card_bondpaper"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cardview_outline"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/img_bondpaper" />

                            <TextView
                                android:id="@+id/textViewBondpaper"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_extrabolditalic"
                                android:text="Bondpaper"
                                android:textColor="#000"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/cardview_outline"
                        app:cardBackgroundColor="#EFF1F3"
                        app:cardCornerRadius="12dp">


                        <LinearLayout
                            android:id="@+id/card_notebook"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cardview_outline"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/img_notebook" />

                            <TextView
                                android:id="@+id/textViewNotebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_extrabolditalic"
                                android:text="Notebook"
                                android:textColor="#000"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/cardview_outline"
                        app:cardBackgroundColor="#EFF1F3"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:id="@+id/card_ballpen"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cardview_outline"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/img_ballpen" />

                            <TextView
                                android:id="@+id/textViewBallpen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_extrabolditalic"
                                android:text="Ballpen"
                                android:textColor="#000"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>