<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/users_cardview"
        android:padding="16dp">

        <!-- Timestamp (Top-Right Corner) -->
        <TextView
            android:id="@+id/user_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Timestamp"
            android:textSize="12sp"
            android:textColor="#808080"
            android:textStyle="italic" />

        <!-- Name Label -->
        <TextView
            android:id="@+id/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_timestamp"
            android:layout_marginTop="8dp"
            android:text="Name:"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Name Value -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_name"
            android:layout_marginTop="4dp"
            android:text="Name"
            android:textSize="16sp" />

        <!-- Divider below Name -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/user_name"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0" />

        <!-- Email Label -->
        <TextView
            android:id="@+id/label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginTop="12dp"
            android:text="Email:"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Email Value -->
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_email"
            android:layout_marginTop="4dp"
            android:text="Email"
            android:textSize="14sp" />

        <!-- Divider below Email -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/user_email"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0" />

        <!-- Phone Number Label -->
        <TextView
            android:id="@+id/label_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_email"
            android:layout_marginTop="12dp"
            android:text="Phone:"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Phone Number Value -->
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_phone"
            android:layout_marginTop="4dp"
            android:text="Phone Number"
            android:textSize="14sp" />

        <!-- Divider below Phone -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/user_phone"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0" />

        <!-- Role Label -->
        <TextView
            android:id="@+id/label_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_phone"
            android:layout_marginTop="12dp"
            android:text="Role:"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Role Value -->
        <TextView
            android:id="@+id/user_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_role"
            android:layout_marginTop="4dp"
            android:text="Role"
            android:textSize="14sp" />

        <!-- Divider below Role -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/user_role"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
