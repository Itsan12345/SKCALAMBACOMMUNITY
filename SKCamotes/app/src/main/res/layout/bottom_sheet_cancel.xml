<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtCancelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Reservation?"
        android:textSize="18sp"
        android:textColor="#B71A1D"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/txtCancelMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to cancel this reservation? This action cannot be undone."
        android:textSize="14sp"
        android:textColor="#313131"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/btnConfirmCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes, Cancel"
        android:backgroundTint="#B71A1D"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnDismissCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No, Go Back"
        android:backgroundTint="@color/gray"
        android:textColor="@android:color/white"/>
</LinearLayout>
