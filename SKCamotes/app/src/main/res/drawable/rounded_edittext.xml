<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the EditText -->
    <solid android:color="#FFFFFF"/> <!-- White background -->

    <!-- Set rounded corners -->
    <corners android:radius="16dp"/> <!-- Adjust the radius to your preference -->

    <!-- Border properties -->
    <stroke android:color="#DDDDDD" android:width="1dp"/> <!-- Light grey border -->

    <!-- Padding around the text (optional) -->
    <padding android:left="16dp" android:right="16dp" android:top="12dp" android:bottom="12dp"/>
</shape>
